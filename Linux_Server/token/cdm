# Build Docker image using Minikube Docker daemon
eval $(minikube docker-env)
docker build -t token-service:1.0 .

# Create a simple deployment.yaml
cat <<EOF > deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: token-service
spec:
  replicas: 1
  selector:
    matchLabels:
      app: token-service
  template:
    metadata:
      labels:
        app: token-service
    spec:
      containers:
      - name: token-service
        image: token-service:1.0
        ports:
        - containerPort: 5000
---
apiVersion: v1
kind: Service
metadata:
  name: token-service
spec:
  selector:
    app: token-service
  ports:
  - protocol: TCP
    port: 80
    targetPort: 5000
  type: NodePort
EOF

kubectl apply -f deployment.yaml

# Get NodePort
kubectl get svc token-service

Get token

curl -X POST http://<minikube-ip>:<node-port>/login \
-H "Content-Type: application/json" \
-d '{"username":"user1","password":"password1"}'


Validate token

curl -X POST http://<minikube-ip>:<node-port>/validate \
-H "Content-Type: application/json" \
-d '{"token":"<paste-your-token-here>"}'